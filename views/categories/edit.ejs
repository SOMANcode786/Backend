<%- include('../partials/header', { title: 'Edit Category' }) %>

<div class="max-w-md mx-auto bg-white p-8 rounded shadow">
  <h1 class="text-2xl font-bold mb-6">Edit Category: <%= category.Category_Name %></h1>

  <% if (error) { %>
    <p class="text-red-500 mb-4"><%= error %></p>
  <% } %>

  <form method="POST" action="/categories/edit/<%= category.Category_ID %>" class="space-y-4">
    <div>
      <label class="block text-sm font-medium">Category Name</label>
      <input name="Category_Name" value="<%= category.Category_Name %>" class="w-full border p-2 rounded" required>
    </div>
    
    <div>
      <label class="block text-sm font-medium">Description</label>
      <textarea name="Description" class="w-full border p-2 rounded" rows="3"><%= category.Description %></textarea>
    </div>

    <div class="flex gap-2">
      <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
        Update Category
      </button>
      <a href="/categories" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600">
        Cancel
      </a>
    </div>
  </form>
</div>

<%- include('../partials/footer') %>    
<%- include('../partials/header', { title: 'Users Dashboard' }) %>

<div class="space-y-8">
  <!-- Page Header -->
  <div class="bg-white/60 backdrop-blur-xl rounded-3xl p-8 shadow-2xl border border-white/50">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6">
      <div>
        <h1 class="text-4xl lg:text-5xl font-black bg-gradient-to-r from-juice-orange to-lemon-yellow bg-clip-text text-transparent mb-2">
          Users Directory
        </h1>
        <p class="text-xl text-gray-700 font-semibold">Manage your admin users</p>
      </div>
      <div class="flex flex-col sm:flex-row gap-4">
        <div class="bg-gradient-to-r from-blue-500 to-purple-600 text-white p-6 rounded-3xl shadow-2xl text-center">
          <div class="text-4xl font-black"><%= users.length %></div>
          <div class="text-sm opacity-90">Total Users</div>
        </div>
        <button class="bg-white/80 backdrop-blur-sm text-juice-orange px-8 py-4 rounded-3xl font-bold text-lg shadow-xl hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 ring-2 ring-juice-orange/30 flex items-center gap-2">
          <i class="fas fa-filter"></i>
          Filter Users
        </button>
      </div>
    </div>
  </div>

  <!-- Users Table -->
  <div class="bg-white/60 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/50 overflow-hidden">
    <div class="p-8 border-b border-gray-100">
      <h2 class="text-2xl font-bold text-gray-800 flex items-center gap-3">
        <i class="fas fa-user-shield text-juice-orange"></i>
        All Users
      </h2>
    </div>
    
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gradient-to-r from-gray-50 to-gray-100">
          <tr>
            <th class="px-8 py-6 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
              <div class="flex items-center gap-2">
                <i class="fas fa-hashtag text-juice-orange"></i>ID
              </div>
            </th>
            <th class="px-8 py-6 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">User Details</th>
            <th class="px-8 py-6 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Email</th>
            <th class="px-8 py-6 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Joined</th>
            <th class="px-8 py-6 text-left text-xs font-bold text-gray-700 uppercase tracking-wider w-24">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% users.forEach(user => { %>
          <tr class="hover:bg-orange-50/50 transition-all duration-200 group">
            <td class="px-8 py-6 font-mono font-bold text-juice-orange text-lg">
              #<%= user.User_ID %>
            </td>
            <td class="px-8 py-6">
              <div class="flex items-center gap-4">
                <div class="w-14 h-14 bg-sky-600 from-juice-orange to-lemon-yellow rounded-2xl flex items-center justify-center shadow-lg">
                  <i class="fas fa-user text-white text-xl"></i>
                </div>
                <div>
                  <div class="font-bold text-xl text-gray-900"><%= user.Name %></div>
                  <div class="text-sm text-gray-500">User ID: <%= user.User_ID %></div>
                </div>
              </div>
            </td>
            <td class="px-8 py-6">
              <div class="bg-gray-100 px-4 py-2 rounded-2xl text-sm font-mono text-gray-800 max-w-max">
                <%= user.Email %>
              </div>
            </td>
            <td class="px-8 py-6">
              <div class="text-sm">
                <div class="font-semibold text-gray-900"><%= new Date(user.Created_At).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %></div>
                <div class="text-gray-500 text-xs"><%= new Date(user.Created_At).toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' }) %></div>
              </div>
            </td>
            <td class="px-8 py-6">
              <div class="flex gap-2">
                <button class="p-2 text-blue-600 hover:bg-blue-100 rounded-xl hover:scale-105 transition-all group-hover:text-blue-700">
                  <i class="fas fa-edit"></i>
                </button>
                <button class="p-2 text-red-500 hover:bg-red-100 rounded-xl hover:scale-105 transition-all group-hover:text-red-600">
                  <i class="fas fa-trash"></i>
                </button>
              </div>
            </td>
          </tr>
          <% }) %>
          
          <% if (users.length === 0) { %>
          <tr>
            <td colspan="5" class="px-8 py-20 text-center">
              <div class="flex flex-col items-center gap-4 opacity-50">
                <div class="w-24 h-24 bg-gray-200 rounded-3xl flex items-center justify-center">
                  <i class="fas fa-users text-3xl text-gray-400"></i>
                </div>
                <h3 class="text-2xl font-bold text-gray-500">No users yet</h3>
                <p class="text-gray-400">Users will appear here once registered</p>
              </div>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>

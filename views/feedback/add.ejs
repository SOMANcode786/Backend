<%- include('../partials/header', { title: 'Feedback' }) %>

<form method="POST" action="/feedback" class="bg-white p-6 rounded shadow space-y-4">
  <input name="Customer_ID" placeholder="Customer ID" class="w-full border p-2" required>
  <input name="Product_ID" placeholder="Product ID (optional)" class="w-full border p-2">
  <input name="Rating" type="number" min="1" max="5" class="w-full border p-2" required>
  <textarea name="Comment" placeholder="Your feedback" class="w-full border p-2"></textarea>
  <button class="bg-orange-500 text-white px-4 py-2 rounded">Submit</button>
</form>


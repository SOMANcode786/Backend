<%- include('../partials/header', { title: 'Add Product' }) %>

<h1 class="text-2xl font-bold mb-4">Add Product</h1>

<form method="POST" action="/products/add" class="space-y-4 bg-white p-6 rounded shadow">
  <input name="Name" placeholder="Product Name" class="w-full border p-2" required>
  <input name="Price" type="number" step="0.01" placeholder="Price" class="w-full border p-2" required>
  <input name="Image_URL" placeholder="Image URL" class="w-full border p-2">
  <textarea 
  name="Description"
  placeholder="Product Description"
  class="w-full border p-2"
></textarea>
<select name="Category_ID">
  <% categories.forEach(c => { %>
    <option value="<%= c.Category_ID %>">
      <%= c.Category_Name %>
    </option>
  <% }) %>
</select>

  <select name="Category_ID" class="w-full border p-2">
    <% categories.forEach(c => { %>
      <option value="<%= c.Category_ID %>"><%= c.Category_Name %></option>
    <% }) %>
  </select>
  <button class="bg-orange-500 text-white px-4 py-2 rounded">Save</button>
</form>

<%- include('../partials/footer') %>
